<form action="/todos" method="POST" style="display: inline;">
  {{> message}}
  <div class="input-group mt-3 d-flex justify-content-center align-items-center mx-3">
    <label for="name">To-Do's Name</label>
    <input class="form-control mx-3" type="text" placeholder="input todo's name" id="name" name="name" value="{{name}}">
  </div>
  <div class="input-group mt-3 d-flex justify-content-center align-items-center mx-3">
    <label for="dueDate">To-Do's Deadline</label>
    <input class="form-control mx-3" type="date" id="dueDate" name="dueDate" value="{{dueDate}}">
  </div>
  <div class="d-flex justify-content-end">
    <button class="btn btn-outline-secondary mt-2 mx-2 text-right" type="submit">Create</button>
  </div>
</form>